<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/fragment_add_entry_title_id"
        android:layout_width="196dp"
        android:layout_height="23dp"
        android:text="@string/fragment_add_entry_title_name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_add_task_entry_heading_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fragment_add_task_entry_heading_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_add_task_entry_text_input_email_input_id"
        android:layout_width="323dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:inputType="textNoSuggestions"
        app:endIconDrawable="@drawable/ic_create"
        app:endIconMode="custom"
        app:endIconTint="@color/teal_600_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_heading_id">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/fragment_login_text_input_heading_id" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/fragment_add_task_entry_topic_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/fragment_add_task_entry_topic_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_text_input_email_input_id" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_add_task_entry_text_topic_input_id"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:inputType="textNoSuggestions"
        app:endIconDrawable="@drawable/ic_create"
        app:endIconMode="custom"
        app:endIconTint="@color/teal_600_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_topic_id">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:text="@string/fragment_add_task_entry_textInput_textEdit" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/fragment_add_task_entry_text_note_input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fragment_add_task_entry_text_note_input_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_text_topic_input_id" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_add_task_entry_textInput_note_input_id"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:inputType="textNoSuggestions"
        app:endIconDrawable="@drawable/ic_create"
        app:endIconMode="custom"
        app:endIconTint="@color/teal_600_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_text_note_input_id">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/fragment_add_task_entry_text_date_and_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/dato_og_tidspunkt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_add_task_entry_fragment" />

    <Button
        android:id="@+id/fragment_add_task_entry_text_date_button_id"
        android:layout_width="151dp"
        android:layout_height="93dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"

        android:drawableTop="@drawable/ic_calendar"
        android:drawableTint="@color/white_50"
        android:text="@string/fragment_add_task_entry_text_date_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_text_date_and_time_id" />

    <Button
        android:id="@+id/fragment_add_task_entry_text_time_button_id"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:drawableTop="@drawable/ic_time"
        android:drawableTint="@color/white_50"
        android:text="@string/fragment_add_task_entry_text_time_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_text_date_and_time_id" />

    <TextView
        android:id="@+id/fragment_add_task_entry_text_add_photos_or_videos_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/fragment_add_task_entry_text_add_photos_or_videos_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_text_date_button_id" />

    <ImageButton
        android:id="@+id/fragment_add_task_entry_image_button_id"
        android:layout_width="142dp"
        android:layout_height="78dp"
        android:backgroundTint="@color/teal_700"
        android:contentDescription="@string/fragment_add_task_entry_image_button_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_text_add_photos_or_videos_id"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <Button
        android:id="@+id/fragment_add_task_entry_save_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/teal_700"
        android:text="@string/fragment_add_task_entry_save_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_image_button_id" />

    <Spinner
        android:id="@+id/spinner_add_task_entry_fragment"
        android:layout_width="407dp"
        android:layout_height="51dp"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_task_entry_textInput_note_input_id" />

</androidx.constraintlayout.widget.ConstraintLayout>